      "content": "\"use client\";\n\nimport Image from \"next/image\";\nimport { Button } from \"@/components/ui/button\";\nimport { Input } from \"@/components/ui/input\";\nimport { Label } from \"@/components/ui/label\";\nimport { Checkbox } from \"@/components/ui/checkbox\";\nimport { Card, CardContent } from \"@/components/ui/card\";\nimport { Mail, Lock } from \"lucide-react\";\n\nexport default function SignInForm() {\n  return (\n    <Card className=\"w-full max-w-md rounded-2xl shadow-md border bg-background\">\n      <CardContent className=\"p-6 flex flex-col gap-6\">\n        {/* Email */}\n        <div className=\"flex flex-col gap-2\">\n          <Label htmlFor=\"email\">Email</Label>\n          <div className=\"flex items-center gap-2 border rounded-lg px-3 h-12 focus-within:ring-2 focus-within:ring-ring\">\n            <Mail className=\"h-5 w-5 text-muted-foreground\" />\n            <Input\n              id=\"email\"\n              type=\"email\"\n              placeholder=\"Enter your email\"\n              className=\"border-0 shadow-none focus-visible:ring-0\"\n            />\n          </div>\n        </div>\n\n        {/* Password */}\n        <div className=\"flex flex-col gap-2\">\n          <Label htmlFor=\"password\">Password</Label>\n          <div className=\"flex items-center gap-2 border rounded-lg px-3 h-12 focus-within:ring-2 focus-within:ring-ring\">\n            <Lock className=\"h-5 w-5 text-muted-foreground\" />\n            <Input\n              id=\"password\"\n              type=\"password\"\n              placeholder=\"Enter your password\"\n              className=\"border-0 shadow-none focus-visible:ring-0\"\n            />\n          </div>\n        </div>\n\n        {/* Remember me & Forgot */}\n        <div className=\"flex items-center justify-between\">\n          <div className=\"flex items-center space-x-2\">\n            <Checkbox id=\"remember\" />\n            <Label htmlFor=\"remember\" className=\"text-sm font-normal\">\n              Remember me\n            </Label>\n          </div>\n          <button className=\"text-sm text-primary hover:underline\">\n            Forgot password?\n          </button>\n        </div>\n\n        {/* Submit */}\n        <Button\n          variant=\"default\"\n          className=\"w-full h-12 text-base font-medium rounded-lg\"\n        >\n          Sign In\n        </Button>\n\n        {/* Social login buttons */}\n        <div className=\"flex flex-col gap-3 mt-2\">\n          <Button\n            variant=\"outline\"\n            className=\"w-full h-12 rounded-lg flex items-center justify-center gap-3\"\n          >\n            <Image\n              src=\"https://www.svgrepo.com/show/355037/google.svg\"\n              alt=\"Google\"\n              width={20}\n              height={20}\n            />\n            Continue with Google\n          </Button>\n\n          <Button\n            variant=\"outline\"\n            className=\"w-full h-12 rounded-lg flex items-center justify-center gap-3\"\n          >\n            <Image\n              src=\"https://upload.wikimedia.org/wikipedia/commons/f/fa/Apple_logo_black.svg\"\n              alt=\"Apple\"\n              width={20}\n              height={20}\n              unoptimized\n            />\n            Continue with Apple\n          </Button>\n\n          <Button\n            variant=\"outline\"\n            className=\"w-full h-12 rounded-lg flex items-center justify-center gap-3\"\n          >\n            <Image\n              src=\"https://www.svgrepo.com/show/303615/github-icon-1-logo.svg\"\n              alt=\"GitHub\"\n              width={20}\n              height={20}\n            />\n            Continue with GitHub\n          </Button>\n        </div>\n\n        {/* Signup */}\n        <p className=\"text-center text-sm text-muted-foreground mt-2\">\n          Donâ€™t have an account?{\" \"}\n          <span className=\"text-primary cursor-pointer hover:underline\">\n            Sign Up\n          </span>\n        </p>\n      </CardContent>\n    </Card>\n  );\n}\n",

      "path": "registry/ruixenui/drawer-inner-content.tsx",
      "content": "\"use client\";\n\nimport {\n  Drawer,\n  DrawerContent,\n  DrawerHeader,\n  DrawerTitle,\n  DrawerDescription,\n  DrawerFooter,\n  DrawerTrigger,\n  DrawerClose,\n} from \"@/components/ui/drawer\";\nimport { Button } from \"@/components/ui/button\";\nimport { Input } from \"@/components/ui/input\";\nimport { Label } from \"@/components/ui/label\";\n\nfunction DrawerInnerContent() {\n  return (\n    <>\n      <DrawerHeader>\n        <DrawerTitle>Newsletter Signup</DrawerTitle>\n        <DrawerDescription>\n          Stay updated! Subscribe to our newsletter for latest updates.\n        </DrawerDescription>\n      </DrawerHeader>\n\n      <div className=\"p-4 space-y-4\">\n        <div className=\"grid gap-2\">\n          <Label htmlFor=\"email\">Email</Label>\n          <Input id=\"email\" type=\"email\" placeholder=\"you@example.com\" />\n        </div>\n      </div>\n\n      <DrawerFooter>\n        <Button>Subscribe</Button>\n        <DrawerClose asChild>\n          <Button variant=\"outline\">Cancel</Button>\n        </DrawerClose>\n      </DrawerFooter>\n    </>\n  );\n}\n\nexport default function FourSideDrawers() {\n  return (\n    <div className=\"flex flex-wrap gap-4 items-center justify-center h-screen\">\n      {/* Bottom Drawer */}\n      <Drawer>\n        <DrawerTrigger asChild>\n          <Button variant=\"outline\">Bottom</Button>\n        </DrawerTrigger>\n        <DrawerContent>\n          <DrawerInnerContent />\n        </DrawerContent>\n      </Drawer>\n\n      {/* Left Drawer */}\n      <Drawer direction=\"left\">\n        <DrawerTrigger asChild>\n          <Button variant=\"outline\">Left</Button>\n        </DrawerTrigger>\n        <DrawerContent>\n          <DrawerInnerContent />\n        </DrawerContent>\n      </Drawer>\n\n      {/* Right Drawer */}\n      <Drawer direction=\"right\">\n        <DrawerTrigger asChild>\n          <Button variant=\"outline\">Right</Button>\n        </DrawerTrigger>\n        <DrawerContent>\n          <DrawerInnerContent />\n        </DrawerContent>\n      </Drawer>\n    </div>\n  );\n}\n",
      "type": "registry:ui",
      "target": "components/ruixen/drawer-inner-content.tsx"
    }
  ]
}
      "path": "registry/ruixenui/user-context-menu.tsx",
      "content": "\"use client\";\n\nimport { Avatar, AvatarFallback } from \"@/components/ui/avatar\";\nimport {\n  ContextMenu,\n  ContextMenuContent,\n  ContextMenuItem,\n  ContextMenuSeparator,\n  ContextMenuTrigger,\n} from \"@/components/ui/context-menu\";\nimport {\n  User,\n  Mail,\n  Shield,\n  LogOut,\n  Sparkles,\n  Star,\n  Heart,\n  Camera,\n} from \"lucide-react\";\n\nexport default function UserContextMenu() {\n  return (\n    <ContextMenu>\n      {/* Trigger */}\n      <ContextMenuTrigger className=\"flex cursor-pointer items-center gap-3 rounded-lg bg-white border border-border p-4 hover:bg-muted/50 transition-all\">\n        <Avatar className=\"size-10 border border-border\">\n          <AvatarFallback className=\"bg-muted text-foreground font-semibold\">\n            SG\n          </AvatarFallback>\n        </Avatar>\n        <div className=\"flex flex-col text-sm\">\n          <span className=\"font-semibold text-foreground\">Srinath G</span>\n          <span className=\"text-muted-foreground text-xs\">\n            Right-click to open menu\n          </span>\n        </div>\n      </ContextMenuTrigger>\n\n      {/* Context Menu */}\n      <ContextMenuContent className=\"w-60 rounded-md border border-border bg-white shadow-md\">\n        <ContextMenuItem className=\"flex items-center gap-2 hover:bg-muted/70 font-medium\">\n          <User className=\"size-4\" />\n          View Dashboard\n        </ContextMenuItem>\n        <ContextMenuItem className=\"flex items-center gap-2 hover:bg-muted/70\">\n          <Mail className=\"size-4\" />\n          Messages\n        </ContextMenuItem>\n        <ContextMenuItem className=\"flex items-center gap-2 hover:bg-muted/70\">\n          <Camera className=\"size-4\" />\n          Update Picture\n        </ContextMenuItem>\n        <ContextMenuItem className=\"flex items-center gap-2 hover:bg-muted/70\">\n          <Heart className=\"size-4\" />\n          Liked Posts\n        </ContextMenuItem>\n\n        <ContextMenuSeparator />\n\n        <ContextMenuItem className=\"flex items-center gap-2 hover:bg-muted/70\">\n          <Sparkles className=\"size-4\" />\n          Achievements\n        </ContextMenuItem>\n        <ContextMenuItem className=\"flex items-center gap-2 hover:bg-muted/70\">\n          <Star className=\"size-4\" />\n          Upgrade to Pro\n        </ContextMenuItem>\n\n        <ContextMenuSeparator />\n\n        <ContextMenuItem className=\"flex items-center gap-2 hover:bg-muted/70\">\n          <Shield className=\"size-4\" />\n          Account Protection\n        </ContextMenuItem>\n        <ContextMenuItem className=\"flex items-center gap-2 hover:bg-muted/70\">\n          <Shield className=\"size-4\" />\n          Privacy & Security\n        </ContextMenuItem>\n\n        <ContextMenuSeparator />\n\n        <ContextMenuItem className=\"flex items-center gap-2 text-red-600 hover:bg-red-50 font-medium\">\n          <LogOut className=\"size-4\" />\n          Sign Out\n        </ContextMenuItem>\n      </ContextMenuContent>\n    </ContextMenu>\n  );\n}\n",
      "type": "registry:ui",
      "target": "components/ruixen/user-context-menu.tsx"
    }
  ]
